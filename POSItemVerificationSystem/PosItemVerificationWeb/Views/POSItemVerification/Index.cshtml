        <!-- Main Verification Interface -->
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                       <div class="row">
                                <div class="col-md-4">
                                    <h5><i class="fas fa-clipboard-check"></i>POS Items Requiring Action: @summary.TotalGroups</h5>

                                </div>
                                <div class="col-md-4">
                                    <h6><i class="fas fa-clock"></i> Generated At: 
                                     @summary.GeneratedAt.ToString("yyyy-MM-dd HH:mm:ss")</h6>
                                </div>

                                <div class="col-md-4">
                                    <button class="btn btn-light btn-md" onclick="submitAllActions()" id="submitBtn" disabled>
                                        <i class="fas fa-plane"></i> Submit All Selected Actions

                                    </button>
                                <small class="text-white" id="submitHint"><i class="fas fa-info-circle"></i> Select actions to enable submit</small>

                                </div>
                            </div>
                    </div>
                    <div class="card-body p-0">
                        <div class="table-container">
                            <table class="table table-hover table-sm mb-0">
                                <thead>
                                    <tr>
                                        <th>Action</th>
                                        <th>Brand</th>
                                        <th>POS Code</th>
                                        <th>POS Item Key</th>
                                        <th>Item Names</th>
                                        <th>Category</th>
                                        <th>Price</th>
                                        <th>Status</th>
                                        <th>Last Sale</th>
                                        <th>Sync Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var group in Model)
                                    {
                                        <tr data-audit-key="@group.AuditKey" class="no-action-selected">
                                            <td>
                                                <button class="btn btn-sm btn-outline-info" onclick="showItemDetails('@group.AuditKey')">
                                                    <i class="fas fa-eye"></i>
                                                </button>
                                            </td>
                                            <td>
                                                <span class="badge bg-primary brand-badge">@group.Brand</span>
                                            </td>
                                            <td><strong>@group.POSCode</strong></td>
                                            <td><strong>@group.POSItemKey</strong></td>
                                            <td>
                                                <div class="mb-1">
                                                    <small class="text-muted">Old:</small> @(group.Current?.POSName ?? "")
                                                </div>
                                                <div class="mb-1">
                                                    <small class="text-success">New:</small> <strong>@(group.NewUpdate?.POSName ?? "")</strong>
                                                </div>
                                                @if (group.HasPOSDeleted)
                                                {
                                                    <div class="posdeleted-item">
                                                        <i class="fas fa-exclamation-triangle text-warning"></i>
                                                        <strong>POSDeleted:</strong> @group.POSDeletedItem.POSName<br>
                                                        <small>ItemKey: @group.POSDeletedItem.POSItemKey | Last Sale: @group.POSDeletedItem.LastRecordedSale | Status: <span class="status-posdeleted">POSDeleted</span></small>
                                                    </div>
                                                }
                                            </td>
                                            <td>
                                                <span class="badge bg-secondary">@(group.NewUpdate?.POSDTAB ?? group.Current?.POSDTAB ?? "")</span>
                                            </td>
                                            <td class="price-display">@($"R{group.CurrentPrice:F2}")</td>
                                            <td>
                                                <span class="status-@(group.Status.ToLower())">@group.Status</span>
                                                @if (group.HasPOSDeleted)
                                                {
                                                    <br>
                                                    <small class="text-danger"><i class="fas fa-trash"></i> Has POSDeleted</small>
                                                }
                                            </td>
                                            <td>
                                                <small>@(group.LastSaleDate?.ToString("yyyy-MM-dd") ?? "")</small>
                                            </td>
                                            <td>
                                                <div class="btn-group btn-group-sm">
                                                    <button class="btn btn-outline-secondary"
                                                            onclick="selectAction('@group.AuditKey', null)"
                                                            title="Clear selection">
                                                        <i class="fas fa-times"></i>
                                                    </button>
                                                    <button class="btn btn-outline-primary"
                                                            onclick="selectAction('@group.AuditKey', 'Update')">
                                                        Update
                                                    </button>
                                                    <button class="btn btn-outline-success"
                                                            onclick="selectAction('@group.AuditKey', 'Create New')">
                                                        Create New
                                                    </button>
                                                </div>
                                            </td>
