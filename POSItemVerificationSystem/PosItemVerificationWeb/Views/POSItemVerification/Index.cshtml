        <!-- Action Summary -->
        <div class="row mt-4">
            <div class="col-12">
                <div class="card">
                    <div class="card-header bg-info text-white">
                        <h5 class="mb-0"><i class="fas fa-list-check"></i> Action Summary</h5>
                    </div>
                    <div class="card-body">
                        <div class="row" id="actionSummary">
                            <div class="col-md-3">
                                <div class="card border-primary">
                                    <div class="card-body text-center">
                                        <h5 class="text-primary" id="updateCount">0</h5>
                                        <p class="mb-0">Items to Update</p>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="card border-success">
                                    <div class="card-body text-center">
                                        <h5 class="text-success" id="createCount">0</h5>
                                        <p class="mb-0">Items to Create New</p>
                                    </div>
