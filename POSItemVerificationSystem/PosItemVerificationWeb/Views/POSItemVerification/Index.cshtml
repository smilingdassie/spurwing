    <!-- Modal for Item Details -->
    <div class="modal fade" id="itemDetailModal" tabindex="-1">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Item Details</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body" id="modalBody">
                    <!-- Detail content will be populated here -->
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
    <script>
        let selectedActions = {};

        // Professional Modal Functions
        function showModal(options) {
            const { title, message, type = 'info', icon, buttons = [] } = options;

            const iconMap = {
                success: { class: 'modal-icon-success', icon: 'fa-check-circle' },
                error: { class: 'modal-icon-error', icon: 'fa-times-circle' },
                warning: { class: 'modal-icon-warning', icon: 'fa-exclamation-triangle' },
                info: { class: 'modal-icon-info', icon: 'fa-info-circle' }
            };

            const iconData = iconMap[type] || iconMap.info;
            const iconHtml = icon || `<i class="fas ${iconData.icon}"></i>`;

            const buttonsHtml = buttons.map(btn =>
                `<button class="btn ${btn.class || 'btn-secondary'}" onclick="${btn.onclick}">${btn.text}</button>`
            ).join('');

            const modalHtml = `
                <div class="custom-modal-overlay" id="customModal">
                    <div class="custom-modal">
                        <div class="custom-modal-header">
                            <h5>${title}</h5>
                        </div>
                        <div class="custom-modal-body">
                            <div class="modal-icon ${iconData.class}">
                                ${iconHtml}
                            </div>
                            <div class="text-center">
                                ${message}
                            </div>
                        </div>
                        <div class="custom-modal-footer">
                            ${buttonsHtml}
                        </div>
                    </div>
                </div>
            `;

            document.body.insertAdjacentHTML('beforeend', modalHtml);
        }

        function closeModal() {
            const modal = document.getElementById('customModal');
            if (modal) {
                modal.style.animation = 'fadeIn 0.2s ease-in reverse';
                setTimeout(() => modal.remove(), 200);
            }
        }

        function showSuccessModal(message, details = '') {
            showModal({
                title: 'Success',
                message: `<p class="mb-2">${message}</p>${details ? `<small class="text-muted">${details}</small>` : ''}`,
                type: 'success',
                buttons: [
                    { text: 'OK', class: 'btn-success', onclick: 'closeModal()' }
                ]
            });
        }

        function showErrorModal(message, details = '') {
            showModal({
                title: 'Error',
                message: `<p class="mb-2">${message}</p>${details ? `<small class="text-muted">${details}</small>` : ''}`,
                type: 'error',
                buttons: [
                    { text: 'Close', class: 'btn-danger', onclick: 'closeModal()' }
                ]
            });
        }

        function showConfirmModal(message, onConfirm, onCancel = null) {
            showModal({
                title: 'Confirm Action',
                message: message,
                type: 'warning',
                buttons: [
                    { text: 'Cancel', class: 'btn-outline-secondary', onclick: onCancel || 'closeModal()' },
                    { text: 'Confirm', class: 'btn-warning', onclick: onConfirm }
                ]
            });
        }

        function showInfoModal(message, title = 'Information') {
            showModal({
                title: title,
                message: message,
                type: 'info',
                buttons: [
                    { text: 'OK', class: 'btn-primary', onclick: 'closeModal()' }
                ]
            });
        }

        // Initialize with NO selections (empty object)
        // No defaults!

        function selectAction(auditKey, action) {
            if (action === null) {
                // Clear selection
                delete selectedActions[auditKey];
            } else {
                selectedActions[auditKey] = action;
                console.log(selectedActions);
            }

            // Update the UI
            const row = document.querySelector(`tr[data-audit-key="${auditKey}"]`);
            const buttons = row.querySelectorAll('.btn-group button');

            // Reset all buttons to outline
            buttons[1].className = 'btn btn-outline-primary'; // Update button
            buttons[2].className = 'btn btn-outline-success'; // Create New button

            // Highlight selected button
            if (action === 'Update') {
                buttons[1].className = 'btn btn-primary';
                row.classList.remove('no-action-selected');
                row.classList.add('action-required');
            } else if (action === 'Create New') {
                buttons[2].className = 'btn btn-success';
                row.classList.remove('no-action-selected');
                row.classList.add('action-required');
            } else {
                // No action selected
                row.classList.remove('action-required');
                row.classList.add('no-action-selected');
            }

            updateSummary();
        }

        function updateSummary() {
            const updateCount = Object.values(selectedActions).filter(a => a === 'Update').length;
            const createCount = Object.values(selectedActions).filter(a => a === 'Create New').length;
            const totalItems = @Model.Count;
            const noActionCount = totalItems - updateCount - createCount;

            document.getElementById('updateCount').textContent = updateCount;
            document.getElementById('createCount').textContent = createCount;
            document.getElementById('noActionCount').textContent = noActionCount;

            // Enable/disable submit button based on selections
            const submitBtn = document.getElementById('submitBtn');
            const submitHint = document.getElementById('submitHint');

            if (updateCount + createCount > 0) {
                submitBtn.disabled = false;
                submitBtn.classList.remove('btn-light');
                submitBtn.classList.add('btn-warning');
                submitHint.innerHTML = `<i class="fas fa-check-circle"></i> Ready to submit ${updateCount + createCount} action(s)`;
            } else {
                submitBtn.disabled = true;
                submitBtn.classList.remove('btn-warning');
                submitBtn.classList.add('btn-light');
                submitHint.innerHTML = '<i class="fas fa-info-circle"></i> Select actions to enable submit';
            }
        }

        function showItemDetails(auditKey) {
            // Find the group data from the model
        @foreach (var group in Model)
        {
            <text>
                            if (auditKey === '@group.AuditKey') {
                                showItemDetailsModal({
                                    auditKey: '@group.AuditKey',
                                    brand: '@group.Brand',
                                    posCode: '@group.POSCode',
                                    newName: '@Html.Raw(Json.Serialize(group.NewUpdate?.POSName ?? ""))',
                                    currentName: '@Html.Raw(Json.Serialize(group.Current?.POSName ?? ""))',
                                    category: '@Html.Raw(Json.Serialize(group.NewUpdate?.POSDTAB ?? group.Current?.POSDTAB ?? ""))',
                                        price: '@group.CurrentPrice.ToString("F2")',
                                    status: '@group.Status',
                                    lastSale: '@(group.LastSaleDate?.ToString("yyyy-MM-dd") ?? "")',
                                    hasPOSDeleted: '@(group.HasPOSDeleted ? "true" : "false")',
                                    posDeletedItem: '@(group.HasPOSDeleted ? Html.Raw(Json.Serialize(new { name = group.POSDeletedItem.POSName, itemKey = group.POSDeletedItem.POSItemKey, lastSale = group.POSDeletedItem.LastRecordedSale })) : "null")',
                                    selectedAction: selectedActions[auditKey] || 'None'
                                })
                            }
            </text>
        }
        }

        function showItemDetailsModal(item) {
            const modalBody = document.getElementById('modalBody');
            modalBody.innerHTML = `
                <div class="row">
                    <div class="col-md-6">
                        <h6>Item Information</h6>
                        <table class="table table-sm">
                            <tr><td><strong>Brand:</strong></td><td>${item.brand}</td></tr>
                            <tr><td><strong>POS Code:</strong></td><td>${item.posCode}</td></tr>
                            <tr><td><strong>Category:</strong></td><td>${item.category}</td></tr>
                            <tr><td><strong>Price:</strong></td><td>R${item.price}</td></tr>
                            <tr><td><strong>Status:</strong></td><td>${item.status}</td></tr>
                            <tr><td><strong>Last Sale:</strong></td><td>${item.lastSale}</td></tr>
                        </table>
                        ${item.hasPOSDeleted === 'true' ? `
                        <div class="card border-warning">
                            <div class="card-header bg-warning text-dark">
                                <h6 class="mb-0"><i class="fas fa-exclamation-triangle"></i> POSDeleted Entry Found</h6>
                            </div>
                            <div class="card-body">
                                <table class="table table-sm mb-0">
                                    <tr><td><strong>Name:</strong></td><td class="text-danger">${item.posDeletedItem.name}</td></tr>
                                    <tr><td><strong>ItemKey:</strong></td><td>${item.posDeletedItem.itemKey}</td></tr>
                                    <tr><td><strong>Last Sale:</strong></td><td>${item.posDeletedItem.lastSale}</td></tr>
                                </table>
                            </div>
                        </div>
                        ` : ''}
                    </div>
                    <div class="col-md-6">
                        <h6>Name Changes</h6>
                        <div class="card">
                            <div class="card-body">
                                <p><strong>From:</strong><br><span class="text-muted">${item.currentName}</span></p>
                                <p><strong>To:</strong><br><span class="text-success">${item.newName}</span></p>
                                ${item.hasPOSDeleted === 'true' ? `
                                <div class="alert alert-warning">
                                    <strong>Note:</strong> This POS code previously had a deleted item.
                                    Consider if "Create New" action is more appropriate.
                                </div>
                                ` : ''}
                            </div>
                        </div>
                        <div class="mt-3">
                            <h6>Selected Action</h6>
                            <span class="badge ${item.selectedAction === 'None' ? 'bg-secondary' : item.selectedAction === 'Create New' ? 'bg-success' : 'bg-primary'} fs-6">
                                ${item.selectedAction}
                            </span>
                        </div>
                    </div>
                </div>
            `;

            new bootstrap.Modal(document.getElementById('itemDetailModal')).show();
        }

        async function submitAllActions() {
            // Only submit items with selected actions
            debugger;
            const itemsWithActions = Object.keys(selectedActions).length;

            if (itemsWithActions === 0) {
                showInfoModal(
                    'No actions have been selected. Please select at least one action before submitting.',
                    'No Actions Selected'
                );
                return;
            }

            const updateCount = Object.values(selectedActions).filter(a => a === 'Update').length;
            const createCount = Object.values(selectedActions).filter(a => a === 'Create New').length;

            const confirmMessage = `
                <p class="mb-3">You are about to submit <strong>${itemsWithActions}</strong> action(s):</p>
                <ul class="text-start">
                    <li><strong>${updateCount}</strong> Update${updateCount !== 1 ? 's' : ''}</li>
                    <li><strong>${createCount}</strong> Create New item${createCount !== 1 ? 's' : ''}</li>
                </ul>
                <p class="mt-3">Do you want to continue?</p>
            `;

            showConfirmModal(confirmMessage, 'performSubmit(); closeModal();');
        }

        async function performSubmit() {
            const actions = Object.entries(selectedActions).map(([auditKey, action]) => {
                const row = document.querySelector(`tr[data-audit-key="${auditKey}"]`);
                const brand = row.querySelector('.brand-badge').textContent;
                const posCode = row.querySelector('td:nth-child(3) strong').textContent;

                return {
                    auditKey: auditKey,
                    brand: brand,
                    posCode: posCode,
                    action: action
                };
            });

            const request = {
                actions: actions,
                emailAddress: ''
            };

            try {
                const response = await fetch('/POSItemVerification/SubmitActions', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify(request)
                });

                const result = await response.json();

                if (result.success) {
                    const updateCount = actions.filter(a => a.action === 'Update').length;
                    const createCount = actions.filter(a => a.action === 'Create New').length;

                    const successMessage = `
                        <p class="mb-3">Successfully submitted ${actions.length} action(s):</p>
                        <ul class="text-start">
                            <li>${updateCount} Update${updateCount !== 1 ? 's' : ''}</li>
                            <li>${createCount} Create New item${createCount !== 1 ? 's' : ''}</li>
                        </ul>
                    `;
                    const details = ``;

                    showSuccessModal(successMessage, details);
                    handleSubmissionSuccess(result);
                } else {
                    showErrorModal('Failed to submit actions', result.message);
                }
            } catch (error) {
                showErrorModal('Network error occurred', error.message);
            }
        }

        function handleSubmissionSuccess(result) {
            if (result.success && result.sessionId) {
                sessionStorage.setItem('lastSubmissionSessionId', result.sessionId);
                showRollbackOption(result.sessionId);
                //Refresh page 
                setTimeout(() => location.reload(), 2000);
            }
        }

        function showRollbackOption(sessionId) {
            const rollbackHtml = `
                <div class="alert alert-info mt-3" id="rollbackAlert">
                    <strong>Changes submitted successfully!</strong>
                    <button class="btn btn-warning btn-sm ms-3" onclick="rollbackChanges('${sessionId}')">
                        <i class="fas fa-undo"></i> Undo All Changes
                    </button>
                </div>
            `;
            document.getElementById('messages').innerHTML = rollbackHtml;
        }

        async function rollbackChanges(sessionId) {
            const confirmMessage = `
                <p class="mb-3">Are you sure you want to <strong>undo all changes?</strong></p>
                <p class="text-danger"><i class="fas fa-exclamation-triangle"></i> <strong>Warning:</strong> This action cannot be reversed.</p>
            `;

            showConfirmModal(confirmMessage, `performRollback('${sessionId}'); closeModal();`);
        }

        async function performRollback(sessionId) {
            try {
                const response = await fetch('/POSItemVerification/RollbackActions', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ sessionId: sessionId })
                });

                const result = await response.json();

                if (result.success) {
                    // CLEAR the session storage so rollback doesn't show again
                    sessionStorage.removeItem('lastSubmissionSessionId');

                    showSuccessModal(
                        'Changes have been rolled back successfully!',
                        'The page will reload to show the original state.'
                    );


                    

                    setTimeout(() => location.reload(), 2000);
                } else {
                    showErrorModal('Rollback failed', result.message);
                }
            } catch (error) {
                showErrorModal('Error during rollback', error.message);
            }
        }

        // Initialize summary on page load
        document.addEventListener('DOMContentLoaded', function() {
            updateSummary();

                // Check if there's a recent submission session
        const lastSessionId = sessionStorage.getItem('lastSubmissionSessionId');
        if (lastSessionId) {
            showRollbackOption(lastSessionId);
        }

        });
    </script>
