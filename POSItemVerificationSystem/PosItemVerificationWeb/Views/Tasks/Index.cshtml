@model IEnumerable<PosItemVerificationWeb.Models.RestaurantOpeningTask>

@{
    ViewData["Title"] = "Tasks";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1><i class="fas fa-tasks"></i> Standard Opening Tasks</h1>
</div>

<div class="card">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>Task ID</th>
                        <th>Task Name</th>
                        <th>Department</th>
                        <th>System</th>
                        <th>Duration (Days)</th>
                        <th>Critical Path</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.TaskId</td>
                                <td>
                                    @item.TaskName
                                    @if (item.IsCriticalPath == true)
                                    {
                                        <span class="badge bg-danger ms-1">Critical</span>
                                    }
                                </td>
                                <td>
                                    @if (item.Department != null)
                                    {
                                        <span class="badge bg-info">@item.Department.DepartmentName</span>
                                    }
                                </td>
                                <td>
                                    @if (item.System != null)
                                    {
                                        <span class="badge bg-secondary">@item.System.SystemName</span>
                                    }
                                </td>
                                <td>@item.EstimatedDurationDays</td>
                                <td>
                                    @if (item.IsCriticalPath == true)
                                    {
                                        <i class="fas fa-exclamation-triangle text-danger"></i>
                                    }
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="6" class="text-center py-4">
                                <i class="fas fa-tasks fa-3x text-muted mb-3"></i>
                                <h4 class="text-muted">No tasks found</h4>
                                <p class="text-muted">Standard opening tasks will appear here once the database is seeded.</p>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
