<!-- Views/Restaurants/Create.cshtml -->
@model PosItemVerificationWeb.Models.Restaurant

@{
    ViewData["Title"] = "Create Restaurant";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1><i class="fas fa-plus"></i> Create New Restaurant</h1>

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-body">
                <form asp-action="Create">
                    <div asp-validation-summary="All" class="text-danger mb-3"></div>

                    <!-- rest of your form fields -->
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label asp-for="DCLink" class="form-label"></label>
                                <input asp-for="DCLink" class="form-control" placeholder="e.g., DC001" />
                                <span asp-validation-for="DCLink" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label asp-for="BrandName" class="form-label"></label>
                                <input asp-for="BrandName" class="form-control" placeholder="e.g., Spur" />
                                <span asp-validation-for="BrandName" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="RestaurantName" class="form-label"></label>
                        <input asp-for="RestaurantName" class="form-control" placeholder="e.g., Spur Sandton City" />
                        <span asp-validation-for="RestaurantName" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="Address" class="form-label"></label>
                        <input asp-for="Address" class="form-control" placeholder="Street Address" />
                        <span asp-validation-for="Address" class="text-danger"></span>
                    </div>

                    <div class="row">
                        <div class="col-md-4">
                            <div class="form-group mb-3">
                                <label asp-for="City" class="form-label"></label>
                                <input asp-for="City" class="form-control" />
                                <span asp-validation-for="City" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group mb-3">
                                <label asp-for="Province" class="form-label"></label>
                                <input asp-for="Province" class="form-control" />
                                <span asp-validation-for="Province" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group mb-3">
                                <label asp-for="PostalCode" class="form-label"></label>
                                <input asp-for="PostalCode" class="form-control" />
                                <span asp-validation-for="PostalCode" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label asp-for="TargetOpeningDate" class="form-label"></label>
                                <input asp-for="TargetOpeningDate" class="form-control" type="date" />
                                <span asp-validation-for="TargetOpeningDate" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label asp-for="Status" class="form-label"></label>
                                <select asp-for="Status" class="form-control">
                                    <option value="Planning">Planning</option>
                                    <option value="In Progress">In Progress</option>
                                    <option value="On Hold">On Hold</option>
                                    <option value="Completed">Completed</option>
                                </select>
                                <span asp-validation-for="Status" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-save"></i> Create Restaurant
                        </button>
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-arrow-left"></i> Back to List
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
