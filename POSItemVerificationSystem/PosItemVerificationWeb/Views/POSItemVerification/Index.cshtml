@model List<PosItemVerificationWeb.Models.POSVerificationGroup>
@{
    ViewData["Title"] = "Collect Alert - Verify POSName Change";
    var summary = ViewBag.Summary as PosItemVerificationWeb.Models.POSVerificationSummary;
    Layout = "~/Views/Shared/_Layout.cshtml";
}
 
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <style>
        .navbar-brand {
            font-weight: bold;
        }

        .card-header {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
        }

        .table-container {
            max-height: 70vh;
            overflow-y: auto;
            border: 1px solid #dee2e6;
            border-radius: 0.375rem;
        }

        .table thead th {
            position: sticky;
            top: 0;
            background-color: #f8f9fa;
            z-index: 10;
            border-bottom: 2px solid #dee2e6;
        }

        .brand-badge {
            font-size: 0.8rem;
            padding: 0.25rem 0.5rem;
        }

        .status-active {
            color: #198754;
        }

        .status-inactive {
            color: #dc3545;
        }

        .status-posdeleted {
            color: #dc3545;
            text-decoration: line-through;
            font-weight: bold;
        }

        .price-display {
            font-weight: bold;
            color: #28a745;
        }

        .summary-card {
            background: linear-gradient(135deg, #28a745 0%, #20c997 100%);
            color: white;
        }

        .action-required {
            background-color: #fff3cd !important;
        }

        .no-action-selected {
            background-color: #f8f9fa;
        }

        .posdeleted-item {
            background-color: #f8d7da;
            border-left: 4px solid #dc3545;
            padding: 6px;
            margin: 3px 0;
            border-radius: 3px;
            font-size: 0.8em;
        }

        /* Professional Modal Styles */
        .custom-modal-overlay {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0, 0, 0, 0.5);
            display: flex;
            align-items: center;
            justify-content: center;
            z-index: 9999;
            animation: fadeIn 0.2s ease-in;
        }

        .custom-modal {
            background: white;
            border-radius: 12px;
            box-shadow: 0 10px 40px rgba(0, 0, 0, 0.2);
            max-width: 500px;
            width: 90%;
            animation: slideIn 0.3s ease-out;
        }

        .custom-modal-header {
            padding: 24px;
            border-bottom: 1px solid #e9ecef;
        }

            .custom-modal-header h5 {
                margin: 0;
                font-size: 1.25rem;
                font-weight: 600;
            }

        .custom-modal-body {
            padding: 24px;
        }

        .custom-modal-footer {
            padding: 16px 24px;
            border-top: 1px solid #e9ecef;
            display: flex;
            justify-content: flex-end;
            gap: 12px;
        }

        .modal-icon {
            width: 48px;
            height: 48px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto 16px;
            font-size: 24px;
        }

        .modal-icon-success {
            background: #d1e7dd;
            color: #0f5132;
        }

        .modal-icon-warning {
            background: #fff3cd;
            color: #856404;
        }

        .modal-icon-error {
            background: #f8d7da;
            color: #842029;
        }

        .modal-icon-info {
            background: #cff4fc;
            color: #055160;
        }

        @@keyframes fadeIn {
            from

        {
            opacity: 0;
        }

        to {
            opacity: 1;
        }

        }

        @@keyframes slideIn {
            from

        {
            transform: translateY(-50px);
            opacity: 0;
        }

        to {
            transform: translateY(0);
            opacity: 1;
        }

        }
    </style>
</head>
